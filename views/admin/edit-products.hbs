<section>
    <div class="container pt-3">
        <h1 class="text-center">Edit Products</h1>
        <form action="/admin/edit-products?id={{product._id}}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter Name"
                    name="productName" value="{{product.productName}}">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Category</label>
                <input type="text" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter Category"
                    name="productCategory" value="{{product.productCategory}}">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Amount</label>
                <input type="number" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter Amount"
                    name="productAmount" value="{{product.productAmount}}">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Description</label>
                <input type="text" class="form-control" id="" aria-describedby="emailHelp"
                    placeholder="Enter Description" name="productDescription" value="{{product.productDescription}}">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Image</label>
                <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px; height : auto;" id="imgView">
                <input type="file" class="form-control mt-2" id="exampleInputPassword1" name="productImage" onchange="viewImage(event)">
            </div>
            <button type="submit" class="float-right btn btn-primary">Submit</button>
        </form>
    </div>
</section>

<script>
    viewImage = () =>{
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>