<section>
    <div class="container pt-4">
        <div class="row p-3 float-right">
            <a href="/admin/add-products/" class="btn btn-primary">Add Products</a>
        </div>
        <table class="table" id="tablelist">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.productName}}</td>
                    <td>{{this.productCategory}}</td>
                    <td>{{this.productAmount}}</td>
                    <td>{{this.productDescription}}</td>
                    <td><img style="width:50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="admin/edit-products?id={{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.productName}} ? ')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#tablelist').DataTable();
} );
</script>