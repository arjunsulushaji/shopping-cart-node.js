<section>
    <div class="container pt-4">
        <h1 class="text-center">Create new account</h1>
        <form action="/signup" method="post">
            <div class="form-group">
                <label for="exampleInputPassword1">Name</label>
                <input type="text" class="form-control" id="" placeholder="Name" name="userName">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter email"
                    name="userEmail">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="" placeholder="Password" name="userPassword">
            </div>
            <a href="/login" class="text-primary">Already have an account ?</a>
            <button type="submit" class="btn btn-primary  float-right">Submit</button>
        </form>
    </div>
</section>