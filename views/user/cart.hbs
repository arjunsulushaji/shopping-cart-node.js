<section>
    <div class="container pt-4">
        <div class="row p-3">
            <h1 class="text-center">Cart</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{#each this.products}}
                    <th scope="row"><img style="width:50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></th>
                    <td>{{this.productName}}</td>
                    {{/each}}
                    <td><button class="btn button mr-3">+</button> {{this.quantity}} <button class="btn button ml-3">-</button></td>
                    <td><a href="" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove {{this.productName}} from cart ? ')">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<style>
    .button{
        width: 2.5rem;
        height: 2.5rem;
        font-weight: bolder;
    }
</style>