<section>
    <div class="container mt-4">
        <div class="row">

            {{#each products}}

            <div class="col-12 col-sm-6 col-md-3 pb-3" style="">
                <div class="card" style="width: 17rem;">
                    <img class="card-img-top" style="width: 16rem;
                     height: 14rem;" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.productName}}</h5>
                        <h6 class="card-title">Rs : {{this.productAmount}}</h6>
                        <p class="card-text">{{this.productDescription}}</p>
                        <a href="/add-to-cart?id={{this._id}}"  class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>

            {{/each}}

        </div>
    </div>
</section>